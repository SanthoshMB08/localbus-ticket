<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbg"
        android:elevation="10dp"
        android:translationZ="5dp"
        android:padding="16dp">

        <!-- Bus Icon -->
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Bus Icon"
            android:src="@drawable/bus" />

        <!-- Bus Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/textBusNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Number"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textVehicleNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle: KA-00-000"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Route: Stop A → Stop B"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textFare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fare: ₹0"
                android:textSize="14sp"
                android:textColor="#388E3C"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
